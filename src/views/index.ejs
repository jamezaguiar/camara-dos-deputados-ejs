<!DOCTYPE html>
<html lang="pt-BR">

<%- include('./partials/head.ejs') %> 

<body>
  <header>
    <%- include('./partials/nav.ejs') %> 
  </header>

  <main class="container" style="margin-top: 180px;">
    <div class="jumbotron">
      <h1>Aplicação da Câmara dos Deputados</h1>
      <form action="/" method="get">
        <div class="md-form active-cyan active-cyan2 mb-3" >
          <input class="form-control" type="text" placeholder="Procure por deputados" name="search">
          <button class="btn btn-primary" type="submit">Pesquisar</button>
        </div>
      </form>
    </div>

    <div class="container">
      <div class="row row-cols-1 row-cols-md-3">
        <% deputados.forEach(deputado => { %>
         <div class="col mb-4">
           <div class="card">
            <div class="view overlay" style="display: flex;align-items: center; justify-content: center;">
              <img class="card-img" src="<%= deputado.urlFoto %>" alt="<%= deputado.nome %>"
                style="max-width: 280px; max-height: 340px; min-width: 280px; min-height: 340px; border-radius: 50%;">
              <div class="mask rgba-white-slight"></div>
              </a>
            </div>
            <div class="card-body">
              <h4 class="card-title"><%= deputado.nome %></h4>
              <p class="card-text">
                <ul class="list-group">
                  <li class="list-group-item">Partido: <%= deputado.siglaPartido %></li>
                </ul>
              </p>
              <form action="/info/<%= deputado.id %> " method="get">
                <button class="btn btn-primary" type="submit">Detalhes</button>
              </form>
            </div>
           </div>
         </div>
        <% }) %>
      </div>
    </div>

  </main>


  <%- include('./partials/scripts.ejs') %> 
</body>
</html>